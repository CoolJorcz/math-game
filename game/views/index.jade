doctype html
html
  head
    link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=Alegreya+Sans+SC")
    link(rel="stylesheet", href="/css/style.css")
    title Math Game
  body
    h1 Play a new Game
    div
      div.inlineBlock
        span Your name:
          input(type="text", placeholder="Enter here!")#name
        br
        form#messageForm
          textarea(rows="4", cols="50", placeholder ="Share something!",
            maxlength=200)#outgoingMessage
          input(type="button", value="Share", disabled=true)#send
      div.inlineBlock.topAligned
        b Participants
        br
        div#participants
    div#messages